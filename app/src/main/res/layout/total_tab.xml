<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/checkbox_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:gravity="center">
        <CheckBox
            android:id="@+id/liner_btn"
            android:layout_width="68dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"
            android:background="@drawable/type_btn"
            android:text="@string/liner"
            android:fontFamily="@font/noto_sans_bold"
            android:textSize="15sp"
            android:textColor="@color/gray2"
            android:stateListAnimator="@null"/>
        <CheckBox
            android:id="@+id/small_btn"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"
            android:background="@drawable/type_btn"
            android:text="@string/small"
            android:fontFamily="@font/noto_sans_bold"
            android:textSize="15sp"
            android:textColor="@color/gray2"
            android:stateListAnimator="@null"/>
        <CheckBox
            android:id="@+id/middle_btn"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"
            android:background="@drawable/type_btn"
            android:text="@string/regular"
            android:fontFamily="@font/noto_sans_bold"
            android:textSize="15sp"
            android:textColor="@color/gray2"
            android:stateListAnimator="@null"/>
        <CheckBox
            android:id="@+id/large_btn"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"
            android:background="@drawable/type_btn"
            android:text="@string/large"
            android:elevation="0dp"
            android:fontFamily="@font/noto_sans_bold"
            android:textSize="15sp"
            android:textColor="@color/gray2"
            android:stateListAnimator="@null"/>
        <CheckBox
            android:id="@+id/overnight_btn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"
            android:background="@drawable/type_btn"
            android:text="@string/overnight"
            android:elevation="0dp"
            android:fontFamily="@font/noto_sans_bold"
            android:textSize="15sp"
            android:textColor="@color/gray2"
            android:stateListAnimator="@null"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>

