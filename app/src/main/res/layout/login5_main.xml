<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CheckActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:orientation="horizontal"
        android:background="@drawable/gradient">

        <ImageView
            android:id="@+id/back5"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/left" />

        <TextView
            android:id="@+id/login"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="70dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="약관동의"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/notofont"
            android:shadowRadius="3.0"
            android:shadowDy="1.0"
            android:shadowColor="#666666"
            android:textSize="17sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"
        android:background="#D9D9D9"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#FFFFFF"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom"
        android:layout_marginTop="128dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="이용약관에\n동의해주세요."
            android:textColor="#666666"
            android:fontFamily="@font/notofont"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp">

                <com.example.wonderwoman.MultiLevelCheckBox
                    android:id="@+id/parent_checkbox"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="-5dp"
                    android:button="@null"
                    android:background="@drawable/check"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="#666666"
                    android:textSize="14dp"
                    android:fontFamily="@font/notofont"
                    android:text="전체동의"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="#EBEEF2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp">

                <com.example.wonderwoman.MultiLevelCheckBox
                    android:id="@+id/checkbox1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:button="@null"
                    android:background="@drawable/check"
                    app:parentCheckBox="@id/parent_checkbox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/notofont"
                    android:textColor="#666666"
                    android:textSize="11dp"
                    android:text="(필수) 만 14세 이상"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp">

                <com.example.wonderwoman.MultiLevelCheckBox
                    android:id="@+id/checkbox2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:button="@null"
                    android:background="@drawable/check"
                    app:parentCheckBox="@id/parent_checkbox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="11dp"
                    android:fontFamily="@font/notofont"
                    android:textColor="#666666"
                    android:text="(필수) Wonder Woman 이용 약관"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp">

                <com.example.wonderwoman.MultiLevelCheckBox
                    android:id="@+id/checkbox3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:button="@null"
                    android:background="@drawable/check"
                    app:parentCheckBox="@id/parent_checkbox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="11dp"
                    android:fontFamily="@font/notofont"
                    android:textColor="#666666"
                    android:text="(필수) 개인정보 처리 방침"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp">

                <com.example.wonderwoman.MultiLevelCheckBox
                    android:id="@+id/checkbox4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:button="@null"
                    android:background="@drawable/check"
                    app:parentCheckBox="@id/parent_checkbox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="11dp"
                    android:fontFamily="@font/notofont"
                    android:textColor="#666666"
                    android:text="(선택) 마케팅 정보 수신"/>
            </LinearLayout>
        </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="170dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/next_btn5"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/btn_next" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>